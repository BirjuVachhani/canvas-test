<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SquareView">
        <attr name="square_fillColor" format="color" />
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="integer" />
        <attr name="squareSize" format="dimension" />
        <attr name="backgroundColor" format="color" />
        <attr name="layout_width" format="dimension">
            <enum name="wrap_content" value="0" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AvatarView">
        <attr name="avatar_backgroundColor" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="adjustViewBounds" format="boolean" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="pressedColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="text" format="string" />
        <attr name="textView" format="reference" />
        <attr name="randomizeColor" format="boolean" />
        <attr name="textChangeListener" format="boolean" />
        <attr name="randomColorRes" format="reference"/>
    </declare-styleable>
</resources>